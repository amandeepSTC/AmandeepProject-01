<style>

  .shop-collection .swiper-button-prev::after,
  .shop-collection .swiper-button-next::after {
    display: none;
  }
  .shop-collection-{{ section.id }} {
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .normal-slider .slider-heading {
    text-align: center;
    margin-bottom: 20px;
    font-size: 28px;
    font-weight: 700;
  }
  .normal-slider .swiper {
    padding-bottom: 80px;
    /* arrows ke liye thoda gap */
  }

  .shop-collection.normal-slider {
    margin-top: 60px;
  }

  /* Slides */
  .normal-slider .swiper-slide {
    width: 292.18px;
    height: 389.03px;
    position: relative;
    min-height: 350px;
    border-radius: 12px;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    transition: all 0.3s ease-in-out;
  }

  .normal-slider .swiper-slide::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: rgba(0, 0, 0, 0);
    transition: background 0.3s ease-in-out;

  }

  .normal-slider .overlay-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    text-align: center;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 2;
  }


  .normal-slider .swiper-slide.swiper-slide-active .overlay-text {
    opacity: 1;
  }


  .normal-slider .swiper-slide.swiper-slide-active::after {
    background: rgba(0, 0, 0, 0.5);
  }


  .normal-slider .swiper-slide.swiper-slide-active .overlay-text {
    opacity: 1;
  }


  .normal-slider .slider-arrows {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .normal-slider .swiper-button-prev,
  .normal-slider .swiper-button-next {
    position: static;
    cursor: pointer;
  }
  .normal-slider .swiper-slide {
    transition: transform 0.4s ease
    , opacity 0.4s ease;
    transform: scale(0.8);
    /* default small */
    opacity: 0.6;
  }

  /* Center slide bada */
  .normal-slider .swiper-slide.swiper-slide-active {
    transform: scale(1.0);
    opacity: 1;
    z-index: 3;
  }

  /* Side slides (prev, next) medium size */
  .normal-slider .swiper-slide.swiper-slide-prev,
  .normal-slider .swiper-slide.swiper-slide-next {
    transform: scale(0.85);
    opacity: 0.9;
    z-index: 2;
  }

  /* Extreme slides (leftmost, rightmost) aur chhote */
  .normal-slider .swiper-slide:not(.swiper-slide-active):not(.swiper-slide-prev):not(.swiper-slide-next) {
    transform: scale(0.8);
    opacity: 0.6;
    z-index: 1;
  }


  @media screen and (max-width: 768px) {
    .normal-slider .swiper-slide {
      min-height: 250px;
      width: 80%;
      /* mobile pe thoda bada card */
    }
    .shop-collection .swiper-button-prev,
    .shop-collection .swiper-button-next {
      display: block;
    }

     .slider-arrows {
      bottom: 10px;
      gap: 15;
    }

    .collection-image {
      width: 180px;
      /* mobile */
      height: 245px;
    }
    @media screen and (max-width: 768px) {
      .normal-slider .swiper-slide {
        transform: scale(0.7);
        opacity: 0.5;
      }
      .normal-slider .swiper-slide.swiper-slide-active {
        opacity: 1;
      }
      .normal-slider .swiper-slide.swiper-slide-prev,
      .normal-slider .swiper-slide.swiper-slide-next {
        transform: scale(0.85);
        opacity: 0.8;
      }
    }
  }
</style>
<section class="shop-collection normal-slider shop-collection-{{ section.id }}">
  <h2 class="slider-heading">Shop Our Collection</h2>

  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign coll = collections[block.settings.collection] %}
        {% if coll != blank %}
          <a
            href="{{ coll.url }}"
            class="swiper-slide"
            style="background-image: url('{{ coll.image | image_url: width: 384, height: 300, crop: 'center' }}')">
            <div class="overlay-text">
              <span>{{ coll.title }}</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
      {% for block in section.blocks %}
        {% assign coll = collections[block.settings.collection] %}
        {% if coll != blank %}
          <a
            href="{{ coll.url }}"
            class="swiper-slide"
            style="background-image: url('{{ coll.image | image_url: width: 384, height: 300, crop: 'center' }}')">
            <div class="overlay-text">
              <span>{{ coll.title }}</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Navigation -->
    <div class="slider-arrows">
      <div class="swiper-button-prev">{% render 'slider-left-arrow' %}</div>
      <div class="swiper-button-next">{% render 'slider-right-arrow' %}</div>
    </div>
  </div>
</section>
<script>
  const shopCollectionSwiper{{- section.id | remove: "--" | remove: "__" | remove: "-" }} = new Swiper(".shop-collection .swiper", {
    slidesPerView: 5,
    spaceBetween: 10,
     centeredSlides: true,
     loop : true,
    navigation: {
      nextEl: ".shop-collection .swiper-button-next",
      prevEl: ".shop-collection .swiper-button-prev",
    },
    breakpoints: {
        0: { slidesPerView: 2 },
        768: { slidesPerView: 3 },
        992: { slidesPerView: 5 },
        1200: { slidesPerView: 5 },
     
    },
  });
</script>


