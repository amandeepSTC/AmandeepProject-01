{{ 'shop-collection.css' | asset_url | stylesheet_tag }}

<style>
  .shop-collection-{{ section.id }} {
    margin-bottom: {{ section.settings.section_margin_bottom }}px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
  }
  @media (max-width: 767px) {
    .shop-collection-{{ section.id }} {
      margin-bottom: {{ section.settings.section_margin_bottom_mobile }}px;
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
    }
  }
</style>
<section class="shop-collection normal-slider shop-collection-{{ section.id }}">
  <h2 class="slider-heading">Shop Our Collection</h2>

  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign coll = collections[block.settings.collection] %}
        {% if coll != blank %}
          <a
            href="{{ coll.url }}"
            class="swiper-slide"
            style="background-image: url('{{ coll.image | image_url: width: 384, height: 300, crop: 'center' }}')">
            <div class="overlay-text">
              <span>{{ coll.title }}</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
      {% for block in section.blocks %}
        {% assign coll = collections[block.settings.collection] %}
        {% if coll != blank %}
          <a
            href="{{ coll.url }}"
            class="swiper-slide"
            style="background-image: url('{{ coll.image | image_url: width: 384, height: 300, crop: 'center' }}')">
            <div class="overlay-text">
              <span>{{ coll.title }}</span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <!-- Navigation -->
    <div class="slider-arrows">
      <div class="swiper-button-prev">{% render 'slider-left-arrow' %}</div>
      <div class="swiper-button-next">{% render 'slider-right-arrow' %}</div>
    </div>
  </div>
</section>
<script>
  const shopCollectionSwiper{{- section.id | remove: "--" | remove: "__" | remove: "-" }} = new Swiper(".shop-collection .swiper", {
    slidesPerView: 5,
    spaceBetween: 10,
     centeredSlides: true,
     loop : true,
    navigation: {
      nextEl: ".shop-collection .swiper-button-next",
      prevEl: ".shop-collection .swiper-button-prev",
    },
    breakpoints: {
        0: { slidesPerView: 2 },
        768: { slidesPerView: 3 },
        992: { slidesPerView: 5 },
        1200: { slidesPerView: 5 },
     
    },
  });
</script>


