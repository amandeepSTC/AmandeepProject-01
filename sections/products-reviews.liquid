

<style>
  .product-reviews {
    margin-bottom: {{ section.settings.section_margin_bottom }}px;
    padding-top: {{ section.settings.section_padding_top }}px;
    padding-bottom: {{ section.settings.section_padding_bottom }}px;
    box-sizing: border-box;
    background: transparent;
  }

  .product-reviews .container {
    max-width: 1310x;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-reviews .heading {
    text-align: center;
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 26px;
    color: #111;
  }

  .product-reviews .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    align-items: start;
  }

  .product-reviews .review-card {
    background-color: #FFF9F6;
    border-radius: 12px;
    padding: 22px;
    box-shadow: 0 6px 18px rgba(14,14,14,0.06);
    display: flex;
    flex-direction: column;
    gap: 14px;
    min-height: 200px;
  }

  .product-reviews .testimonial {
    font-size: 17px;
    line-height: 1.5;
    color: #444;
    flex: 1 0 auto;
  }

  .product-reviews .review-meta {
    display: flex;
    align-items: center;
   justify-content: space-between;
    margin-top: 6px;
  }

  .product-reviews .review-avatar {
    width: 96px;
    height: 130px;
    border-radius: 999px;
    flex: 0 0 56px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .product-reviews .review-avatar img {
    display: block;
  }

  .product-reviews .review-name {
    font-weight: 700;
    font-size: 18px;
    color: #111;
  }

  .product-reviews .review-designation {
    font-size: 14px;
    color: #9b9b9b;
    margin-top: 2px;
    font-family: Brittany Signature;
  }

  @media (max-width: 991px) {
    .product-reviews .reviews-grid { grid-template-columns: repeat(2, 1fr); }
  }

  @media (max-width: 767px) {
    .product-reviews {
      margin-bottom: {{ section.settings.section_margin_bottom_mobile }}px;
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
    }

    .product-reviews .heading {
      font-size: 20px;
      margin-bottom: 18px;
    }

    .product-reviews .reviews-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .product-reviews .review-card {
      padding: 16px;
    }

    .product-reviews .review-avatar {
     
      flex: 0 0 48px;
    }

  }
</style>

<section class="product-reviews" aria-label="Product Reviews" role="region">
  <div class="container">
    <!-- Heading -->
    <h2 class="heading">
      {{ section.settings.section_heading | default: "Product Reviews" }}
    </h2>

    <!-- Reviews grid -->
    <div class="swiper reviews-swiper">
  <div class="swiper-wrapper">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <article class="review-card" role="listitem">
            <div class="testimonial">
              <p>{{ block.settings.testimonial | escape }}</p>
            </div>

            <div class="review-meta">
              <div class="review-avatar">
                {% if block.settings.svg_image != blank %}
                  {{ block.settings.svg_image | image_url: width: 100 | image_tag: alt: block.settings.reviewer_name }}
                {% endif %}
              </div>
              <div>
                <div class="review-name">{{ block.settings.reviewer_name }}</div>
                {% if block.settings.designation != blank %}
                  <div class="review-designation">{{ block.settings.designation }}</div>
                {% endif %}
              </div>
            </div>
          </article>
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <article class="review-card" role="listitem">
            <div class="testimonial">
              <p>{{ block.settings.testimonial | escape }}</p>
            </div>

            <div class="review-meta">
              <div class="review-avatar">
                {% if block.settings.svg_image != blank %}
                  {{ block.settings.svg_image | image_url: width: 100 | image_tag: alt: block.settings.reviewer_name }}
                {% endif %}
              </div>
              <div>
                <div class="review-name">{{ block.settings.reviewer_name }}</div>
                {% if block.settings.designation != blank %}
                  <div class="review-designation">{{ block.settings.designation }}</div>
                {% endif %}
              </div>
            </div>
          </article>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  <!-- ✅ Navigation only -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>
  </div>
</section>
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    const reviewsSwiper = new Swiper(".product-reviews .reviews-swiper", {
      loop: true,
      navigation: {
        nextEl: ".reviews-swiper .swiper-button-next",
        prevEl: ".reviews-swiper .swiper-button-prev",
      },
      breakpoints: {
        0: { slidesPerView: 1 },     
        768: { slidesPerView: 2 },   
        992: { slidesPerView: 3 },  
      }
    });
  });
</script>

{% schema %}
{
  "name": "Product Reviews",
