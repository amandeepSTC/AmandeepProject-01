  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Product Reviews"
    },
    {
      "type": "range",
      "id": "section_margin_bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section margin-bottom (desktop)",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Inner padding top (desktop)",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Inner padding bottom (desktop)",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Section margin-bottom (mobile)",
      "default": 10
    },
    {
      "type": "range",
      "id": "section_padding_top_mobile",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Inner padding top (mobile)",
      "default": 18
    },
    {
      "type": "range",
      "id": "section_padding_bottom_mobile",
      "min": 0,
      "max": 120,
      "step": 2,
      "unit": "px",
      "label": "Inner padding bottom (mobile)",
      "default": 18
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "svg_image",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial text",
          "default": "“I absolutely love this product; it gave my skin a wonderful glow.”"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer name",
          "default": "Kanika Kapoor"
        },
        {
          "type": "text",
          "id": "designation",
          "label": "Designation",
          "default": "Designer"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Product Reviews",
      "category": "Testimonials",
      "settings": {}
    }
  ]
}
{% endschema %}
