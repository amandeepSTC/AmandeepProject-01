<style>
  .media {
    padding: 30px 0;
    background: #fff;
  }

  .media .media-logo-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .media .logo-wrapper svg{
    width: 120px; 
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    object-fit: contain;
  }

  @media screen and (max-width:500px){
    .media .logo-wrapper svg{
      width: 90px; 
      height: 50px;
    }
  }
</style>

<section class="media media-slider-{{ section.id }}">
  <div class="swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide media-logo-item">
          <a href="{{ block.settings.logo_url }}">
            <div class="logo-wrapper">
              {{ block.settings.logo_svg }}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    new Swiper(".media .swiper", {
      slidesPerView: 3,       
      loop: true,               
      spaceBetween: 50,         
      speed: 4000,              
      allowTouchMove: false,     
      freeMode: true,
      autoplay: {
        delay: 0,               
        disableOnInteraction: false
      },
      breakpoints: {
         1024: { slidesPerView: 6 }, 
      }
    });
  });
</script>

{% schema %}
{
  "name": "Media Logo Slider",
  "settings": [],
  "blocks": [
    {
      "type": "media_logo",
      "name": "Media Logo",
      "settings": [
        {
          "type": "textarea",
          "id": "logo_svg",
          "label": "SVG Code"
        },
        {
          "type": "url",
          "id": "logo_url",
          "label": "Article URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Media Logo Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
