

<section id="{{ section.id }}" class="bestseller-section">
  <!-- Left Side -->
  <div class="bestseller-left">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    <a
      href="{{ section.settings.button_link }}"
      class="btn"
      style="background: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.button_text }}
    </a>
  </div>

  <!-- Right Side -->
  <div class="bestseller-right">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign coll = collections[block.settings.collection] %}
          {% if coll != blank %}
            <div class="swiper-slide">
              <a href="{{ coll.url }}">
                {{ coll.image | image_url: width: 200 | image_tag: alt: coll.title, class: 'collection-image' }}
              </a>
              <div class="collection-title">{{ coll.title }}</div>
              <a href="{{ coll.url }}" class="collection-btn">
                {{ section.settings.collection_btn_text }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Arrows -->
      <div class="swiper-button-prev">{% render 'slider-left-arrow' %}</div>
      <div class="swiper-button-next">{% render 'slider-right-arrow' %}</div>
    </div>
  </div>
</section>

<script>
  document.addEventListener(
    "DOMContentLoaded",
    function () {
      new Swiper("#{{ section.id }} .swiper", {
        slidesPerView: 5,
        spaceBetween: 20,
        centeredSlides: true,
        loop: true,
        navigation: {
          nextEl: ".normal-slider .swiper-button-next",
          prevEl: ".normal-slider .swiper-button-prev",
        },
        breakpoints: {
          0: { slidesPerView: 2 },
          768: { slidesPerView: 3 },
          992: { slidesPerView: 5 },
          1200: { slidesPerView: 5 },
        },
      });
    },
    { once: true }
  );
</script>

{% schema %}
{
  "name": "Bestseller Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Love Your Skin With Our Bestsellers"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Paragraph",
      "default": "A skincare line crafted to perfection for 50 years"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#ff7043"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "collection_btn_text",
      "label": "Collection Button Text",
      "default": "View Collection"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bestseller Collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
