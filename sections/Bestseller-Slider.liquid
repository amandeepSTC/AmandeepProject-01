<style>
  .bestseller-section-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    gap : 10px;
    height : 497px;
  }
  .bestseller-section-{{ section.id }}
  .bestseller-left {
    width: 340px;
    height: 232px;
    position: relative;
    top : -50px;
  }
  .bestseller-section-{{ section.id }}
  .bestseller-left h2 {
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 15px;
    color: #111;
  }
  .bestseller-section-{{ section.id }}
  .bestseller-left p {
    font-size: 16px;
    margin-bottom: 20px;
    color: #444;
  }
  .bestseller-section-{{ section.id }}
  .bestseller-left .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 25px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .bestseller-section-{{ section.id }}
  .bestseller-right {
    width: 851px;
    height: 425px;
    position: relative;
  }
  .bestseller-section-{{ section.id }}
  .collection-image {
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 12px;
    width: 270px;
    height: 289px;
  }
  .bestseller-section-{{ section.id }}
  .collection-title {
    font-size: 15px;
    font-weight: 600;
    margin-bottom: 6px;
    text-transform: uppercase;
  }
  .bestseller-section-{{ section.id }}
  .collection-btn {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    border: 1px solid #111;
    text-decoration: none;
    transition: all 0.3s ease;
  }
</style>
<section class="bestseller-section-{{ section.id }}">
  <div class="bestseller-left">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
    <a
      href="{{ section.settings.button_link }}"
      class="btn"
      style="background: {{ section.settings.button_color }}; color: {{ section.settings.button_text_color }};">
      {{ section.settings.button_text }}
    </a>
  </div>
  <!-- Right Side -->
  <div class="bestseller-right">
    <div class="swiper swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign coll = collections[block.settings.collection] %}
          {% if coll != blank %}
            <div class="swiper-slide">
              <a href="{{ coll.url }}">
                {% if coll.image %}
                  {{ coll.image | image_url: width: 400 | image_tag: alt: coll.title, class: 'collection-image' }}
                {% endif %}
              </a>
              <div class="collection-title">{{ coll.title }}</div>
              <a href="{{ coll.url }}" class="collection-btn">
                {{ section.settings.collection_btn_text }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <!-- Arrows -->
      <div class="swiper-button-prev swiper-prev-{{ section.id }}">{% render 'slider-left-arrow' %}</div>
      <div class="swiper-button-next swiper-next-{{ section.id }}">{% render 'slider-right-arrow' %}</div>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
  new Swiper(".swiper-{{ section.id }}", {
    slidesPerView: 1,
    spaceBetween: 10,
    navigation: {
      nextEl: ".swiper-next-{{ section.id }}",
      prevEl: ".swiper-prev-{{ section.id }}",
    },
    breakpoints: {
      0: { slidesPerView: 1.2 },
      768: { slidesPerView: 2 },
      1200: { slidesPerView: 3 }
    }
  });
  });
</script>
{% schema %}
  {
    "name": "Bestseller Collections",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Love Your Skin With Our Bestsellers"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Paragraph",
        "default": "A skincare line crafted to perfection for 50 years"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop All"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link",
        "default": "/collections/all"
      }, {
        "type": "color",
        "id": "button_color",
        "label": "Button Background Color",
        "default": "#FF7043"
      }, {
        "type": "color",
        "id": "button_text_color",
        "label": "Button Text Color",
        "default": "#FFFFFF"
      }, {
        "type": "text",
        "id": "collection_btn_text",
        "label": "Collection Button Text",
        "default": "View Collection"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection Card",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Select Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Bestseller Collections",
        "blocks": [
          {
            "type": "collection"
          }, {
            "type": "collection"
          }, {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}