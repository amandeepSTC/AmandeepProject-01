<section class="get-started">
  <h2 class="section-title">GET STARTED</h2>

  <div class="get-started-grid">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'get_started_item' %}
          <div class="item">
            {% if block.settings.item_image != blank %}
               {{ block.settings.item_image 
                | image_url: width: 600 
                | image_tag: alt: block.settings.item_title }}
            {% endif %}
            {% if block.settings.item_title != blank %}
              <p>{{ block.settings.item_title }}</p>
            {% endif %}
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>


<style>
  .get-started {
    text-align: center;
    padding: 10px 10px;
  }
  }

  .section-title {
    font-size: 28px;
    margin-bottom: 30px;
  }

  h2 {
     font-size : 28px;
     font-weight: 600;
  }

  .get-started-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
  }

  .get-started .item img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }

  .get-started .item p {
    margin-top: 10px;
    font-size: 16px;
    font-weight: 500;
  }

  /* Mobile responsive */
  @media (max-width: 500px) {
    .get-started-grid {
      grid-template-columns: repeat(2, 1fr); /* 2 columns */
      column-gap: 6px;  /* horizontal gap */
      row-gap: 10px;    /* vertical gap */
    }
  }
</style>

{% schema %}
{
  "name": "Get Started Section",
  "tag": "section",
  "class": "get-started",
  "settings": [
     { 
        "type" : "text",
        "id" : "top_title",
        "label" : "Top Heading"
     }
  ],
  "blocks": [
  {
    "type": "get_started_item",
    "name": "Get Started Item",
    "settings": [
      {
        "type": "image_picker",
        "id": "item_image",
        "label": "Product Image"
      },
      {
        "type": "text",
        "id": "item_title",
        "label": "Product Title",
        "default": "Face Oils"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Get Started Section"
    }
  ]
}
{% endschema %}
